<div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.blogs.es/aa91a3/cine-/1366_2000.jpg);">
  <div class="container">
    <h1>Save any Kind of <strong>Movies</strong></h1>
    <p>Cinephilia time</p>
  </div>
</div>

<%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>

<div>
  <% @lists.each do |list| %>
  <div   class="container" class="di-flex">
    <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <ul>
        <li><%= link_to list.name, list_path(list.id) %> </li>
      </ul>
    </div>
  </div>
</div>
<% end %>
<li><%= link_to "Add new list", new_list_path %></li>
